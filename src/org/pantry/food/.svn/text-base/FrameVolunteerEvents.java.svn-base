    private VolunteerEventIO objIo = new VolunteerEventIO();
    private int nextId = 0;
    private ArrayList<String> currentVolunteers = new ArrayList<String>();

    private void load(){
        try {
            objIo.readCsvFile();

            DefaultTableModel model = (DefaultTableModel)this.jTable1.getModel();
            model.setRowCount(0);

            DateFormat dateFormat = new SimpleDateFormat("MM/dd/yyyy");
            Calendar cal = Calendar.getInstance();
            Calendar visCal = Calendar.getInstance();

            for (int i = 0; i < objIo.getCvsCount(); i++){
                VolunteerEvent obj = objIo.getCvsList().get(i);

                model.addRow(obj.getVolunteerEventObject());

                if (obj.getVolunteerEventId() >= nextId){
                    nextId = obj.getVolunteerEventId() + 1;
                }
            }

        } catch (FileNotFoundException ex) {
            Logger.getLogger(FrameVolunteerEvents.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(FrameVolunteerEvents.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
    
    private void loadVolunteers()
    {
  
        try {
            VolunteerIO volIO = new VolunteerIO();
            volIO.readCsvFile();

            for (int i = 0; i < volIO.getCvsCount(); i++){
                Volunteer obj = volIO.getCvsList().get(i);
                currentVolunteers.add(obj.getName());

            }

        } catch (FileNotFoundException ex) {
            Logger.getLogger(FrameVolunteerEvents.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(FrameVolunteerEvents.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    	
    }
    
    private void save(){
        try {
            objIo.saveCsvFile();
        } catch (IOException ex) {
            Logger.getLogger(FrameVolunteerEvents.class.getName()).log(Level.SEVERE, null, ex);
        } 
        
    }

    private VolunteerEvent getSelected(){

        VolunteerEvent obj = null;

        int irow = this.jTable1.getSelectedRow();

        if (irow > -1){
            int itestId = Integer.parseInt(this.jTable1.getModel().getValueAt(irow, 0).toString());

            for (int i = 0; i < this.objIo.getCvsCount(); i++){
                VolunteerEvent test = this.objIo.getCvsList().get(i);
                if (test.getVolunteerEventId() == itestId){
                    obj = test;
                    break;
                }
            }

        }

        return obj;
    }
    

    private String getCurrentDateString(){

        DateFormat dateFormat = new SimpleDateFormat("MM/dd/yyyy");
        return dateFormat.format(new Date());

    }


