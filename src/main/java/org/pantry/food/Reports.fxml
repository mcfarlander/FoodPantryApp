            <Label styleClass="content-header" text="Reports">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <GridPane alignment="CENTER_LEFT" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <RadioButton id="monthly.summary" alignment="CENTER_LEFT" mnemonicParsing="false" selected="true" text="Monthly Summary for">
                           <toggleGroup>
                              <ToggleGroup fx:id="radios" />
                           </toggleGroup>
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </RadioButton>
                        <ComboBox fx:id="monthCbo" prefWidth="100.0">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </ComboBox>
                     </children>
                  </HBox>
                  <RadioButton id="food.weight" mnemonicParsing="false" text="Donated Food Weight Report" toggleGroup="$radios" GridPane.rowIndex="1" />
                  <RadioButton id="volunteer.events" mnemonicParsing="false" text="Volunteer Events" toggleGroup="$radios" GridPane.rowIndex="3" />
                  <RadioButton id="pantry.report" mnemonicParsing="false" text="Pantry Report Summary" toggleGroup="$radios" GridPane.rowIndex="4" />
                  <RadioButton id="volunteer.hours" mnemonicParsing="false" text="Volunteer Hours" toggleGroup="$radios" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </GridPane>
            <HBox>
               <children>
                  <Button id="openReportBtn" fx:id="openBtn" focusTraversable="false" mnemonicParsing="false" styleClass="record-action" text="Open">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <Label fx:id="outputLabel">
               <padding>
                  <Insets left="15.0" top="15.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
